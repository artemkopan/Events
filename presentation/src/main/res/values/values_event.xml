<?xml version="1.0" encoding="utf-8"?>
<resources>


    <dimen name="event_item_space">@dimen/space3x</dimen>

    <style name="Event" />

    <style name="Event.List" />
    <style name="Event.Detail" />

    <style name="Event.List.Widget" />
    <style name="Event.Detail.Widget" />


    <style name="Event.List.Widget.Button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="android:background">@drawable/bg_circle_grey</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/space1x</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:stateListAnimator">@animator/shadow_state_list</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
    </style>



    <style name="Event.Detail.Widget.TextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/space1x</item>
        <item name="android:paddingBottom">@dimen/space3x</item>
        <item name="android:paddingTop">@dimen/space3x</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>



</resources>